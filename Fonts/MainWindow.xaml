<Window x:Class="Fonts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fonts"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" Margin="18">Selecciona una fuente y estilo</TextBlock>
       
        <WrapPanel DockPanel.Dock="Bottom" HorizontalAlignment="Right" Margin="20">
            <Button Padding="30, 0">OK</Button>
            <Button Margin="20, 0" Padding="30, 5">Cancelar</Button>
        </WrapPanel>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".3*"/>
                <ColumnDefinition Width=".2*"/>
                <ColumnDefinition Width=".1*"/>
                <ColumnDefinition Width=".4*"/>
            </Grid.ColumnDefinitions>

            <ListBox Grid.Column="0"></ListBox>
            <ListBox Grid.Column="1"></ListBox>
            <ListBox Grid.Column="2"></ListBox>

            <GroupBox Header="Vista previa:" Grid.Column="3">
                <TextBlock>AaBbCcYyZz</TextBlock>
            </GroupBox>
        
        </Grid>
    </DockPanel>
</Window>
